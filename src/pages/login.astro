---
import DefaultLayout from '@/layouts/Default.astro'

import LoginForm from '@/components/LoginForm.vue'

import { user } from '@/stores/auth'

const { username, isLoggedIn } = user.get()
---

<DefaultLayout>
  <div class="flex py-4 justify-center">
    <div class="flex flex-col bg-skin-body-fill-inv text-skin-inverted shadow-md rounded px-8 pt-6 pb-8 mb-4">
      {isLoggedIn ? <h3 class="text-xl font-medium">Hello {username}!!!</h3> : <LoginForm client:visible />}
    </div>
  </div>
</DefaultLayout>
